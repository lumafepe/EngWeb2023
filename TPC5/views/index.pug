doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        link(rel='stylesheet', href='w3.css')
        title= "TaskManager"
    body
        div.w3-card-4
            header.w3-container.w3-teal
                h1 Task Manager
            form.w3-container(method='POST')
                fieldset
                  label Due date
                  input.w3-input.w3-round(type='date' name='dueDate')
                  label User
                  select.w3-select(name='user')
                    option(value='' disabled='' selected='') Choose your option
                    each val, key in users
                        option(value=key)=val
                  label Desc
                  input.w3-input.w3-round(type='textarea' name='desc')
                button.w3-btn.w3-purple.w3-mb-2(type='submit') Add
            if edit
                form.w3-container(method='POST')
                  fieldset
                    label Due date
                    input.w3-input.w3-round(type='date', name='dueDate', value=edit.dueDate)
                    label Desc
                    input.w3-input.w3-round(type='textarea', name='desc', value=edit.desc)
                    label User
                              select.w3-select(name='user')
                                option(value='' disabled='' selected='') Choose your option
                                each val, key in users
                                    option(value=key)=val
                  button.w3-btn.w3-purple.w3-mb-2(type='submit') Edit
            table.w3-table
                tr
                    th Todo
                    th Done
                each pair in pairs
                    tr
                      td
                        if pair[1]
                          .w3-card-4.w3-teal
                            .w3-row
                              .w3-col.m12.l9
                                p=pair[1].desc
                                p=pair[1].dueDate
                                p=users[pair[1].user]
                              .w3-col.m4.l3.w3-cell-middle
                                a(href=pair[1].id) ✎
                                a(href=pair[1].id+"/done") ✅
                                a(href="todo/"+pair[1].id+"/delete") ❌
                      td
                        if pair[0]
                          .w3-card-4.w3-teal
                            .w3-row
                              .w3-col.m12.l9
                                p=pair[0].desc
                                p=pair[0].dueDate
                                p=users[pair[0].user]
                              .w3-col.m4.l3.w3-cell-middle
                                a(href="done/"+pair[0].id+"/delete") ❌
            footer.w3-container.w3-blue
                h5 Generated by LP in #{date}